<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".activities.UploadDataActivity">

    <Button
        android:id="@+id/button_choose_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose file" />

    <EditText
        android:id="@+id/productRatings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/button_choose_image"
        android:hint="productRatings"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/button_choose_image" />


    <Button
        android:id="@+id/button_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="23dp"
        android:text="Upload" />

    <EditText
        android:id="@+id/productPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_below="@+id/productRatings"
        android:hint="productPrice" />

    <EditText
        android:id="@+id/productName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:hint="productName"
        android:layout_below="@+id/productPrice"
        android:layout_marginLeft="16dp" />

    <EditText
        android:id="@+id/productDiscount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:hint="productDiscount"
        android:layout_below="@+id/productName"
        android:layout_marginLeft="16dp" />

    <EditText
        android:id="@+id/productDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_below="@+id/productDiscount"
        android:hint="productDescription"
        android:layout_marginLeft="16dp" />


    <EditText
        android:id="@+id/productCategory"
        android:layout_width="match_parent"
        android:layout_below="@+id/productDescription"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:hint="productCategory"
        android:layout_marginLeft="16dp" />

    <EditText
        android:id="@+id/productQuantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_below="@+id/productCategory"
        android:hint="productQuantity"
        android:layout_marginLeft="16dp" />

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="128dp"
        android:layout_height="129dp"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/productQuantity"
        android:layout_marginBottom="78dp" />


</RelativeLayout>