<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="You have to pay for the product"
        android:textColor="#000"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Product Name - "
        android:textColor="#000"
        android:layout_marginTop="60dp"
        android:textSize="15sp"
        android:layout_marginStart="15dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="#000"
        android:id="@+id/rent_product_name"
        android:layout_marginTop="60dp"
        android:textSize="15sp"
        android:layout_marginStart="125dp"
        android:textStyle="bold" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="#000"
        android:id="@+id/rent_amount_balance"
        android:layout_marginTop="120dp"
        android:textSize="15sp"
        android:layout_marginStart="145dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Product Buyed On - "
        android:textColor="#000"
        android:layout_marginTop="100dp"
        android:textSize="15sp"
        android:layout_marginStart="15dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="#000"
        android:id="@+id/rent_product_buyed_on"
        android:layout_marginTop="100dp"
        android:textSize="15sp"
        android:layout_marginStart="155dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Rent Price"
        android:textColor="#000"
        android:layout_marginTop="160dp"
        android:textSize="15sp"
        android:layout_marginStart="15dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="#000"
        android:id="@+id/rent_price"
        android:layout_marginTop="160dp"
        android:textSize="15sp"
        android:layout_marginStart="125dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-27dp"
        tools:layout_editor_absoluteY="0dp">

        <Button
            android:id="@+id/rent_product_pay"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="200dp"
            android:background="#FFC107"
            android:text="Pay Rent"
            android:textColor="#000" />


    </RelativeLayout>


    <!-- More GUI components go here  -->

</androidx.constraintlayout.widget.ConstraintLayout>