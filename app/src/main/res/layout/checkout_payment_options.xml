<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- sub parent-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageButton
            android:id="@+id/card_payment"
            android:layout_width="match_parent"
            android:layout_height="173dp"
            android:src="@drawable/credit_card_icon"
            app:layout_constraintStart_toStartOf="parent"
            android:background="#FFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


        <ImageButton
            android:id="@+id/paypal_payment"
            android:layout_width="match_parent"
            android:layout_height="173dp"
            android:src="@drawable/paypal_icon"
            app:layout_constraintStart_toStartOf="parent"
            android:background="#FFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_payment"/>

        <ImageButton
            android:id="@+id/google_payment"
            android:layout_width="match_parent"
            android:layout_height="173dp"
            android:src="@drawable/common_google_signin_btn_icon_dark"
            app:layout_constraintStart_toStartOf="parent"
            android:background="#FFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/paypal_payment"/>

        <ImageButton
            android:id="@+id/cod_payment"
            android:layout_width="match_parent"
            android:layout_height="173dp"
            android:src="@drawable/cod_icon"
            app:layout_constraintStart_toStartOf="parent"
            android:background="#FFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/google_payment"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>